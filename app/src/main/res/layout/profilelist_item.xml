<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="10dp"
    android:background="@drawable/list_background"
    android:paddingBottom="10dp"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/vendor_image_view"
        android:layout_marginTop="10dp"
        android:background="@color/img_background"
        android:layout_alignParentTop="true"

        android:layout_alignParentLeft="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Vendor Name 1"
        android:textColor="@color/title_text_color"
        android:id="@+id/vendor_name"
        android:layout_toRightOf="@+id/vendor_image_view"
        android:layout_marginTop="22dp"
        android:textSize="16sp"

        android:layout_alignTop="@+id/vendor_image_view"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Hotel description comes here"
        android:id="@+id/vendor_speciality"
        android:textColor="@color/title_text_color"
        android:textSize="15sp"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/vendor_name"
        android:layout_alignLeft="@+id/vendor_name"
        android:layout_alignStart="@+id/vendor_name" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vendor_speciality"
        android:layout_toRightOf="@+id/vendor_image_view"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@+id/vendor_name"
        android:layout_alignStart="@+id/vendor_name"
        android:layout_marginTop="9dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/vendor_rating"
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            android:textColor="@color/title_text_color"
            android:text="Rating " />
        <!--<RatingBar-->
        <!--style = "?android:attr/ratingBarStyleSmall"-->
        <!--android:id="@+id/ratingBar1"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="fill_parent"-->
        <!--android:isIndicator="true"-->
        <!--android:numStars="5"-->
        <!--android:stepSize="1"-->
        <!--android:rating="5"-->

        <!--/>-->
        <!--<TextView-->
        <!-- -->
        <!--android:id="@+id/name"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_weight=".30"-->
        <!--android:textSize="12dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Walmart " />-->

        <TextView
            android:id="@+id/vendor_delivery_time"
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/title_text_color"
            android:text="60 minutes" />

        <TextView
            android:id="@+id/textViewIsopen"
            android:layout_width="0dp"
            android:layout_weight=".50"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/title_text_color"
            android:text="" />

    </LinearLayout>


</RelativeLayout>
